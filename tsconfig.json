{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2020", "es6"],
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
